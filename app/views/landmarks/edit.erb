<h1>Edit A Landmark</h1>
<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <h2>Landmark Name:</h2>
  <input type="text" name="landmark[name]" id="landmark_name" value="<%= @landmark.name %>">
  <br>
  <h2>Year Completed:</h2>
  <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>">
  <h2>Figures:</h2>
  <br>
  <% @figures.each do |figure| %>
    <input type="radio" name="figure[id]" value="<%= figure.id %>" id="<%= figure.id %>" <%='checked' if @landmark.figure == figure %>><%= figure.name %></input>
    <br>
  <% end %>
  <br>
  <h2>Or create a new figure:</h2>
  <input type="text" name="figure[name]" id="figure_name">

  <button type="submit">Create landmark</button>
</form>
