<h1>Create New Landmark</h1>

<form action="/landmarks" method="post">
  <h2>Landmark Name:</h2>
  <input type="text" name="landmark[name]" id="landmark_name">
  <br>
  <h2>Year Completed:</h2>
  <input type="text" name="landmark[year_completed]" id="year_completed">
  <h2>Figures:</h2>
  <br>
  <% @figures.each do |figure| %>
    <input type="radio" name="figure[id]" value="<%= figure.id %>" id="<%= figure.id %>"><%= figure.name %></input>
    <br>
  <% end %>
  <br>
  <h2>Or create a new figure:</h2>
  <input type="text" name="figure[name]" id="figure_name">

  <button type="submit">Create New Landmark</button>
</form>
