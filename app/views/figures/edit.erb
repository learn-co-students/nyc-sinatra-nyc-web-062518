<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <h2>Figure Name:</h2>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">
  <br>
  <h2>Titles:</h2>
  <% @titles.each do |title| %>
    <input type="checkbox" name="title[id][]" value="<%= title.id %>" id="<%= title.id %>"<%='checked' if @figure.titles.include?(title) %>><%= title.name %></input>
    <br>
  <% end %>
  <br>
  <h2>Create New Title:</h2>
  <input type="text" name="title[name]" id="title_name">
  <br>
  <h2>Landmarks:</h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="landmark[id][]" value="<%= landmark.id %>" id="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
    <br>
  <% end %>
  <br>
  <h2>Or create a new landmark:</h2>
  <p>Name: <input type="text" name="landmark[name]" id="landmark_name"></p>
  <p>Year Completed: <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></p>
  <button type="submit">Update Figure</button>
</form>
